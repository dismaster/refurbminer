##### Logging Module
# LOG_LEVEL controls verbosity: ERROR < WARN < INFO < DEBUG < VERBOSE
LOG_LEVEL=INFO
LOG_TO_CONSOLE=true

# Backend logging configuration
# Enable sending logs to backend via /error endpoint
SEND_LOGS_TO_BACKEND=false
# Backend log level - supports two modes:
# 1. Hierarchical: WARN (sends ERROR + WARN), INFO (sends ERROR + WARN + INFO), etc.
# 2. Explicit list: ERROR,SUCCESS (sends only ERROR and SUCCESS messages)
# Available levels: ERROR, WARN, INFO, DEBUG, SUCCESS
BACKEND_LOG_LEVEL=WARN

##### API settings
API_URL=https://api.refurbminer.de
RIG_TOKEN=