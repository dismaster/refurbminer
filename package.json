{
  "name": "refurbminer",
  "version": "1.1.7",
  "description": "",
  "author": "Ch3ckr",
  "private": true,
  "license": "RefurbMiner",
  "scripts": {
    "prebuild": "node scripts/clean-dist.js",
    "prebuild:rimraf": "rimraf dist",
    "prebuild:shell": "bash scripts/clean-dist.sh",
    "prebuild:inline": "node -e \"const fs=require('fs');const path=require('path');function rmDir(dir){if(fs.existsSync(dir)){fs.readdirSync(dir).forEach(file=>{const filePath=path.join(dir,file);if(fs.statSync(filePath).isDirectory())rmDir(filePath);else fs.unlinkSync(filePath);});fs.rmdirSync(dir);}}rmDir('dist');console.log('dist directory cleaned');\"",
    "build": "node scripts/smart-build.js",
    "build:smart": "node scripts/smart-build.js",
    "build:webpack": "nest build --builder webpack --webpackPath webpack.config.js",
    "build:tsc": "tsc -p tsconfig.build.json && npm run postbuild",
    "build:termux": "npm run prebuild:shell && npm run build:tsc",
    "build:only": "nest build --builder webpack --webpackPath webpack.config.js",
    "postbuild": "node scripts/copy-public.js",
    "postbuild:shell": "bash scripts/copy-public.sh",
    "postbuild:copyfiles": "copyfiles -u 1 \"src/public/**/*\" dist",
    "postbuild:fallback": "node -e \"const fs=require('fs');const path=require('path');function copyDir(src,dest){if(!fs.existsSync(dest))fs.mkdirSync(dest,{recursive:true});fs.readdirSync(src).forEach(file=>{const srcPath=path.join(src,file);const destPath=path.join(dest,file);if(fs.statSync(srcPath).isDirectory())copyDir(srcPath,destPath);else fs.copyfileSync(srcPath,destPath);});}copyDir('src/public','dist/public');console.log('Public files copied');\"",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/serve-static": "^4.0.0",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "optionalDependencies": {
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.10.7"
  }
}
